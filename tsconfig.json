{
  "compilerOptions": {
    "target": "ES2020",
    "downlevelIteration": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",               // <-- FIXED
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node", "mocha"],
    "allowJs": false,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*",
    "engine/**/*"                 // <-- FIXED
  ],
  "exclude": [
    "node_modules",
    "dist",
    "contracts",
    "artifacts",
    "cache",
    "scripts/**/*",
    "test/**/*"
  ]
}
