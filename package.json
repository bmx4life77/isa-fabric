{
  "name": "isa-fabric",
  "version": "0.4.0",
  "description": "ISA Fabric â€” Genesis Governance v4.0, Spec Compliance Engine, and Unified CLI.",
  "author": "Louis Pearson <kctiDAO@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/bmx4life77/isa-fabric",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmx4life77/isa-fabric.git"
  },
  "bugs": {
    "url": "https://github.com/bmx4life77/isa-fabric/issues"
  },

  "type": "commonjs",
  "main": "dist/src/cli/index.js",
  "bin": {
    "isa": "./dist/cli/index.js"
  },

  "scripts": {
    "start": "node index.js",
    "envelope": "node dist/analytics/envelopeCli.js data/aggregated_metrics3_2.json",
    "diagnostics": "node dist/analytics/isaDiagnostics.js data/aggregated_metrics3_2.json",
    "clean": "rm -rf artifacts cache dist && echo 'Workspace cleaned.'",
    "build": "tsc -p tsconfig.json && cp -r src/schemas dist/schemas && chmod +x dist/cli/index.js",
    "compile": "npx hardhat compile",
    "natspec": "npx hardhat natspec",
    "benchmark": "npx hardhat benchmark",
    "test": "npx hardhat test",
    "generate-tags": "ts-node src/core/TagMethodGenerator.ts",
    "compute-security": "ts-node src/security/computeSecurity.ts",
    "adv:gen-workloads": "ts-node src/workloads/workloadGenerator.ts",
    "adv:run": "ts-node src/tools/advRunner.ts",
    "forecast": "node dist/analytics/forecastCli.js data/aggregated_metrics3_2.json",
    "fre": "node dist/fre/freCli.js data/aggregated_metrics3_2.json",
    "fre:events": "node dist/fre/freCli.js data/aggregated_metrics3_2.json --events",
    "fre:out": "node dist/fre/freCli.js data/aggregated_metrics3_2.json --out data/fre_report.json",
    "fre:golden": "mkdir -p golden/fre && node dist/fre/freCli.js data/aggregated_metrics3_2.json --out golden/fre/agg3_2.json",
    "fre:report": "node dist/fre/freCli.js data/aggregated_metrics3_2.json --out data/fre_report.json",
    "fre:check": "ts-node scripts/checkFreSnapshot.ts data/fre_report.json golden/fre/agg3_2.json",
    "fre:smoke": "npm run build && node dist/fre/freCli.js data/aggregated_metrics3_2.json --ui && node dist/fre/freCli.js data/aggregated_metrics3_2.json --shock auto --ui",
    "metrics:evaluate": "node dist/cli/index.js metrics evaluate",
    "governance:run": "node dist/cli/index.js governance run",
    "deploy:list": "node dist/cli/index.js deploy list",
    "deploy:history": "node dist/cli/index.js deploy history",
    "deploy:inspect": "node dist/cli/index.js deploy inspect",
    "evaluate": "node dist/cli/index.js evaluate",
    "datasets": "ts-node src/tools/datasets/isa_datasets.ts",
    "datasets:generate": "ts-node src/tools/datasets/isa_datasets.ts generate --scenario all",
    "sce": "TS_NODE_CACHE=false ts-node sce/run.ts",
    "parse": "ts-node src/natspec/natspecParserFile.ts",
    "prepare": "npm run build"
  },

  "keywords": [
    "governance",
    "cli",
    "blockchain",
    "security",
    "compliance",
    "spec-engine",
    "governance-engine",
    "isa-fabric",
    "genesis-governance"
  ],

  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "governance_failure_modes.jsonl",
    "docs/**/*"
  ],

  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "commander": "^14.0.2",
    "zod": "^4.2.1"
  },

  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "chai": "^4.3.10",
    "ethers": "^5.8.0",
    "hardhat": "^2.27.0",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.1.1",
    "typescript": "^5.9.3"
  },

  "engines": {
    "node": ">=18.0.0"
  },

  "publishConfig": {
    "access": "public"
  },

  "sideEffects": false
}

